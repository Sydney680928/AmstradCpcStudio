				<Key word="XPOS" />
				<Key word="YPOS" />
			</KeyWords>

			<KeyWords name="vars_uppercase" bold="false" italic="false" color="Magenta">
				<Key word="ERR" />
				<Key word="ERL" />
				<Key word="HIMEM" />
			</KeyWords>

			<KeyWords name="boolean_uppercase" bold="false" italic="false" color="Orange">
				<Key word="OR" />
				<Key word="AND" />
				<Key word="XOR" />
				<Key word="EQV" />
				<Key word="NOT" />
			</KeyWords>

		</RuleSet>
		
    </RuleSets>
	
</SyntaxDefinition>

