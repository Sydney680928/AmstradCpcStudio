				<Key word="MEMORY" />
				<Key word="MERGE" />
				<Key word="MODE" />
				<Key word="MOVE" />
				<Key word="MOVER" />
				<Key word="NEW" />
				<Key word="NEXT" />
				<Key word="ON" />
				<Key word="STOP" />
				<Key word="SQ" />
				<Key word="OPENIN" />
				<Key word="OPENOUT" />
				<Key word="ORIGIN" />
				<Key word="OUT" />
				<Key word="PAPER" />
				<Key word="PEN" />
				<Key word="PLOT" />
				<Key word="PLOTR" />
				<Key word="POKE" />
				<Key word="PRINT" />
				<Key word="RAD" />
				<Key word="RANDOMIZE" />
				<Key word="READ" />
				<Key word="RELEASE" />
				<Key word="REMAIN" />
				<Key word="RENUM" />
				<Key word="RESTORE" />
				<Key word="RESUME" />
				<Key word="RETURN" />
				<Key word="RUN" />
				<Key word="SAVE" />
				<Key word="SOUND" />
				<Key word="WRITE" />
				<Key word="STOP" />
				<Key word="SYMBOL" />
				<Key word="TAG" />
