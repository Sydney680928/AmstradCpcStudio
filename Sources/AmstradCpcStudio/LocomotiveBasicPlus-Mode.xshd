<?xml version="1.0"?>
<!-- syntax definition for AMSTRAD CPC BASIC+ -->

<SyntaxDefinition name="LocomotiveBasicPlus" extensions=".basp">

    <Digits name="Digits" bold="false" italic="false" color="Red"/>

    <RuleSets>

		<RuleSet ignorecase="true">

			<Delimiters>*()-+=|#/:;"&lt;&gt;,</Delimiters>

			<Span name="COMMENT1" bold="false" italic="false" color="Gray" stopateol="true">
				<Begin singleword="true">REM </Begin>
			</Span>

			<Span name="COMMENT2" bold="false" italic="true" color="DarkGray" stopateol="true">
				<Begin singleword="true">//</Begin>
			</Span>

			<Span name="IMPORT" bold="false" italic="true" color="Green" stopateol="true">
				<Begin singleword="true">#IMPORT </Begin>
				<End>@ </End>
			</Span>

			<Span name="DEF" bold="false" italic="true" color="SaddleBrown" stopateol="true">
				<Begin singleword="true">#DEF </Begin>
				<End>@ </End>
			</Span>

			<Span name="String" bold="false" italic="false" color="Green" stopateol="false" escapecharacter="\">
				<Begin>"</Begin>
				<End>"</End>
			</Span>

			<Span name="LabelUsage" bold="false" italic="true" color="Green" stopateol="true">
				<Begin>@@</Begin>
				<End>:</End>
			</Span>

			<Span name="X01" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>ON ERROR GOTO</Begin>
				<End>@ </End>
			</Span>

			<Span name="X02" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>CHAIN MERGE</Begin>
				<End>@ </End>
			</Span>

			<Span name="X03" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>DEF FN</Begin>
				<End>@ </End>
			</Span>

			<Span name="X04" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>KEY DEF</Begin>
				<End>@ </End>
			</Span>

			<Span name="X05" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>LINE INPUT</Begin>
				<End>@ </End>
			</Span>

			<Span name="X06" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>ON BREAK GOSUB</Begin>
				<End>@ </End>
			</Span>

			<Span name="X07" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>ON BREAK STOP</Begin>
				<End>@ </End>
			</Span>

			<Span name="X08" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>PRINT USING</Begin>
				<End>@ </End>
			</Span>

			<Span name="X09" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>SPEED INK</Begin>
				<End>@ </End>
			</Span>

			<Span name="X10" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>SPEED KEY</Begin>
				<End>@ </End>
			</Span>

			<Span name="X11" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>SPEED WRITE</Begin>
				<End>@ </End>
			</Span>

			<Span name="X12" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>SYMBOL AFTER</Begin>
				<End>@ </End>
			</Span>

			<Span name="X13" bold="false" italic="false" color="Blue" stopateol="true">
				<Begin>WINDOW SWAP</Begin>
				<End>@ </End>
			</Span>

			<KeyWords name="commands_uppercase" bold="false" italic="false" color="Blue">
				<Key word="AFTER" />
				<Key word="AUTO" />
				<Key word="BORDER" />
				<Key word="CALL" />
				<Key word="CAT" />
				<Key word="CHAIN" />
				<Key word="DELETE" />
				<Key word="CLEAR" />
				<Key word="CLG" />
				<Key word="CLOSEIN" />
				<Key word="CLOSEOUT" />
				<Key word="CLS" />
				<Key word="CONT" />
				<Key word="DATA" />
				<Key word="DEFINT" />
				<Key word="DEFSTR" />
				<Key word="DEFREAL" />
				<Key word="DEG" />
				<Key word="DELETE" />
				<Key word="DI" />
				<Key word="DIM" />
				<Key word="DRAW" />
				<Key word="DRAWR" />
				<Key word="EDIT" />
