				<Key word="WAIT" />
				<Key word="WEND" />
				<Key word="WHILE" />
				<Key word="WIDTH" />
				<Key word="WINDOW" />
				<Key word="ZONE" />
            </KeyWords>

			<KeyWords name="functions_uppercase" bold="false" italic="false" color="Firebrick">
				<Key word="ABS" />
				<Key word="ASC" />
